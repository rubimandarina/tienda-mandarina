    <script>
        let cart = []; // Array para almacenar los productos en el carrito

        function updateCartDisplay() {
            const cartList = document.getElementById("cart-items");
            cartList.innerHTML = ""; // Limpiar la lista actual
            let total = 0;

            cart.forEach((item, index) => {
                const li = document.createElement("li");
                li.innerHTML = `
                    <span>${item.name} - $${item.price.toFixed(2)}</span>
                    <button onclick="removeFromCart(${index})">X</button>
                `;
                cartList.appendChild(li);
                total += item.price;
            });

            document.getElementById("cart-total").textContent = `Total: $${total.toFixed(2)}`;
        }

        function addToCart(product) {
            cart.push(product);
            updateCartDisplay();
        }

        function removeFromCart(index) {
            cart.splice(index, 1); // Eliminar el elemento en la posici√≥n 'index'
            updateCartDisplay();
        }

        function checkout() {
            if (cart.length === 0) {
                alert("Tu carrito de Michi-Compras est√° vac√≠o. ¬°Agrega algo lindo primero!");
            } else {
                let purchaseSummary = "¬°Gracias por tu Michi-Compra! Has adquirido:\n\n";
                cart.forEach(item => {
                    purchaseSummary += `- ${item.name} ($${item.price.toFixed(2)})\n`;
                });
                const total = cart.reduce((sum, item) => sum + item.price, 0);
                purchaseSummary += `\nTotal a pagar: $${total.toFixed(2)}`;

                alert(purchaseSummary);
                cart = []; // Vaciar el carrito despu√©s de la compra
                updateCartDisplay();
            }
        }
    </script>
